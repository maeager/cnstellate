proc calc_smooth_hist() { // 1 arg - variance
  work.resize(0)
  for i = 0, nchannels-1 {
    for j = 0, nTSperchannel-1 {
      work.append(tstellate[i][j].spiketimes)
    }
  }
  hist = work.sumgauss(0,tstop,1,$1)
}

